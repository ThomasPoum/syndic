<div class="flex flex-wrap justify-start w-full p-2 bg-gray-50 hover:bg-gray-100">

  <div class="flex justify-start w-1/2 text-sm text-gray-600">
    <%= link_to invoice_path(invoice, condo: @condo), class:"w-1/4 flex justify-center" do %>
      <%= invoice.company %>
    <% end %>
    <div class="flex justify-center w-3/4 pl-4 text-gray-600">
      <%= invoice.date_invoice %>
    </div>
  </div>

  <div class="flex w-1/3">
    <div class="flex justify-center w-1/2 text-sm text-gray-600">
      <% if invoice.paid %>
      Payé
      <% else %>
      A régler
      <% end %>
    </div>
  
    <div class="flex justify-end w-1/2 text-sm text-gray-600">
      <%= invoice.amount %> €
    </div>
  </div>
      
   
    

  <div class="flex justify-end w-1/6">
    <%= link_to "#" do %>
      <%= render_svg "icons/edit" %>
    <% end %>
  </div>

</div>