
<div class="mb-4 ml-4 font-semibold text-blue-800">Expenses <%= test %>
</div>

<div class="flex w-full rounded">
  <div class="flex justify-start w-1/2 ">
  </div>
  <div class="flex w-1/3 pb-1 pr-2 text-xs italic text-gray-500">
    <div class="flex justify-end w-1/2">Estimated</div>
    <div class="flex justify-end w-1/2">Real</div>
  </div>
</div>

<div class="flex w-full pt-2 pb-2 mb-2 bg-gray-300 rounded">
  <div class="flex justify-start w-1/2 pl-4 font-bold text-gray-700">Total
  </div>
  <div class="flex w-1/3 font-bold text-gray-700">
    <div class="flex justify-end w-1/2"><%= Expense.where(:condo_id => condo.id, :exercice => test).sum(:estimated) %> €</div>
    <div class="flex justify-end w-1/2"><%= Expense.where(:condo_id => condo.id, :exercice => test).sum(:real) %> €</div>
  </div>
</div>

<div class="w-full">
  <%= render condo.expenses.where(:exercice => test) %>
</div>

<div class="flex justify-end">
  <%= link_to "Add an expense", new_condo_expense_path(condo), class:"mt-2 btn btn-small btn-blue"%>
</div>
