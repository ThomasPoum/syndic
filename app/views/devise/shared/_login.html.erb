
<div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"bg-gray-200 rounded-sm h-10 pl-2" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",  class:"bg-gray-200 rounded-sm h-10 pl-2 mt-6 mb-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex field">
        <%= f.check_box :remember_me, class:"flex items-center mr-1 " %>
        <%= f.label :remember_me, class:"flex items-center text-gray-500 text-sm" %>
      </div>
    <% end %>

    <div class="flex flex-wrap justify-end">
      <div class="flex justify-end actions">
        <%= f.submit "Log in", class:"btn btn-blue btn-small mb-4"%>
      </div>
    </div>

  <% end %>

  <div class="flex-col mt-6 text-sm text-gray-500">
    
    Pas encore de compte ? <%= link_to "Sign up", new_registration_path(resource_name) %>
    
    <div>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div></div>

</div>